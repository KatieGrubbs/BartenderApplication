@model IEnumerable<BartenderApplication.Models.Order>

@{
    ViewBag.Title = "Order Queue";
}

<h2>@ViewBag.Title</h2>

<br />

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CocktailName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderedBy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CocktailName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderedBy)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = item.OrderId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                @Html.ActionLink("Cancel", "Delete", new { id = item.OrderId })
            </td>
        </tr>
    }

</table>
